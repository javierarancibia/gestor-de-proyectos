<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="jumbotron">
            <h1 class="display-4">Dashboard de Proyectos</h1>
            <hr class="my-4">
            <p>Plataforma para creacion de proyectos</p>
            <%= link_to 'Entrar a Plataforma para crear Proyectos', dashboards_index_path %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3 offset-md-2">
        <%= search_form_for @q do |f| %>
            <div class="form-group">
                <%= f.label :status_eq, "Estado" %>
                <%= f.select :status_eq, options_for_select(Project.statuses ,
@q.status_eq), {},{class: "form-control"} %>
            </div>

            <%= f.submit "Buscar", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>




<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha de Inicio</th>
                <th>Fecha de Termino</th>
                <th>Estado actual del Proyecto</th>
                <th colspan="3"></th>
                </tr>
            </thead>


            <tbody>
                <% @projects.each do |project| %>
                    <tr>
                        <td><%= project.name %></td>
                        <td><%= project.description %></td>
                        <td><%= project.start_date %></td>
                        <td><%= project.due_date %></td>
                        <td><%= project.status %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>

