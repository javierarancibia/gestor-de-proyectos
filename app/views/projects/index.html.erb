<p id="notice"><%= notice %></p>

<%
=begin%>
 <div class="row">
<div class="col-md-8 offset-md-2">
<div class="jumbotron">
<h1 class="display-4">Welcome to my blog!</h1>
<hr class="my-4">
<p>Read some awesome blog posts!!</p>
</div>
</div>
</div>
<div class="row">
<div class="col-md-8 offset-md-2">
<% @posts.each do |post| %>
<div class="row">
<div class="col-md-12"><h3><%= post.title%></h3></div>
<div class="col-md-12 small">
<span><strong>Created by:</strong> <span class="font-weight-light">
<%= post.author %></span></span>
<span><strong>on </strong> <span class="font-weight-light"><%=
post.created_at %></span></span>
</div>
<div class="col-md-12"><p><%= post.description%></p></div>
</div> 
<%
=end%>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>Due date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.due_date %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
